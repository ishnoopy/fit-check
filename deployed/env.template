# Environment Variables Template
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file to version control!

# Node Environment
NODE_ENV=production

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://backend:4000

# Backend Configuration
FRONTEND_URL=http://frontend:3000
PORT=4000

# Database Configuration
MONGO_INITDB_ROOT_USERNAME=your_secure_username_here
MONGO_INITDB_ROOT_PASSWORD=your_secure_password_here
DB_URL=mongodb://your_secure_username_here:your_secure_password_here@mongo:27017/fit-check?authSource=admin

# JWT Secret (generate a strong random string)
# You can generate one using: openssl rand -base64 32
JWT_SECRET=your_secure_jwt_secret_here

# SSL/TLS Configuration
DOMAIN=fit-check.ishnoopy.space
EMAIL=ishnoopy@gmail.com

